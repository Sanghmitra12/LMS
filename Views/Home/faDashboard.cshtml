@{
    ViewBag.Title = "faDashboard";
}

<head>
    <style>
        body {
            overflow-y: auto;
            max-height: 100vh;
        }
    </style>
    <style>
        /* Adds margin below the search bar */
        div.dataTables_filter {
            margin-bottom: 15px; /* Adjust as needed */
        }
    </style>
    <meta charset="utf-8" />
    <title>faDashboard</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
</head>
<body>

    <div class="container py-5">
        <h2 class="text-center mb-4">
            Running <span class="fw-bold text-highlight">Schedules for 2025-Q1</span>
        </h2>

        <div class="table-responsive mb-5">
            <table id="runningTable" class="table table-bordered text-center align-middle" style="min-width: 1300px;">
                <thead class="table-info">
                    <tr>
                        <th>Sr No.</th>
                        <th>Schedule Name</th>
                        <th>Employee Name</th>
                        <th>Designation</th>
                        <th>Schedule Created on</th>
                        <th>View</th>
                    </tr>
                </thead>
                <tbody>
                    
                </tbody>
            </table>
        </div>

        <h2 class="text-center mb-4">
            Closed <span class="fw-bold text-highlight">Schedules</span>
        </h2>

        <div class="table-responsive mb-5">
            <table id="closedTable" class="table table-bordered text-center align-middle" style="min-width: 1300px;">
                <thead class="table-info">
                    <tr>
                        <th>Sr No.</th>
                        <th>Schedule Name</th>
                        <th>Employee Name</th>
                        <th>Designation</th>
                        <th>Schedule Created on</th>
                        <th>Schedule Closed on</th>
                        <th>View</th>
                    </tr>
                </thead>
                <tbody>
                   
                </tbody>
            </table>
        </div>
    </div>

    <!-- DataTables Script -->
    <script>
        $(document).ready(function () {
            $('#runningTable').DataTable({
                scrollX: true,
                paging: true,
                searching: true
            });

            $('#closedTable').DataTable({
                scrollX: true,
                paging: true,
                searching: true
            });
        });
    </script>

</body>
