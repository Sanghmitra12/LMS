                                <td>1001563241</td>
                                <td style="background-color: green; color: white;">Approved</td>
                                <td>SUMBITTED</td>
                                <td>OK</td>
                            </tr>
                            <tr>
                                <td>3</td>
                                <td>2024-25-Q2</td>
                                <td>YES</td>
                                <td>3982762.2</td>
                                <td>1001605404</td>
                                <td style="background-color: green; color: white;">Approved</td>
                                <td></td>
                                <td>OK</td>
                            </tr>
                            <tr>
                                <td>4</td>
                                <td>2024-25-Q3</td>
                                <td>YES</td>
                                <td>1520301.7</td>
                                <td>1001648443</td>
                                <td style="background-color: green; color: white;">Approved</td>
                                <td>Q3</td>
                                <td>OK</td>
