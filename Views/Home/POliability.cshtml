@model LMS.Models.PoLiabilityMaster

@{
    ViewBag.Title = "POliability";
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<head>

    <style>
        body {
            overflow-y: auto;
            max-height: 100vh;
        }
    </style>

    <meta charset="utf-8" />
    <title>POliability</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
</head>
<body>


    <div class="container my-4">
        <h2 class="text-center mb-4">POliability</h2>

        <div class="bg-light p-4 rounded shadow">
            <h4 class="text-center fw-semibold mb-4">
                <em>Book <span class="text-dark">Liability Details</span></em>
            </h4>

            @using (Html.BeginForm("PoLiability", "Home", FormMethod.Post))
            {


                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">PO Number</label>
                        
                        @Html.TextBoxFor(m => m.PONumber, new { @class = "form-control only-numbers", placeholder = "Enter PO Number" })



                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Vendor Code</label>
                    
                        @Html.TextBoxFor(m => m.VendorCode, new { @class = "form-control only-numbers", placeholder = "Enter Vendor Code" })
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">PO Description</label>
                
                    @Html.TextBoxFor(m => m.PODescription, new { @class = "form-control only-letters", placeholder = "Enter PO Description" })
                </div>

                <div class="mb-3">
                    <label class="form-label">Vendor Name</label>
                   
                    @Html.TextBoxFor(m => m.VendorName, new { @class = "form-control only-letters", placeholder = "Enter Vendor Name" })
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">PO Start Date</label>
                      
                        @Html.TextBoxFor(m => m.POStartDate, new { @class = "form-control", type = "date" })
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">PO End Date</label>
                     
                        @Html.TextBoxFor(m => m.POEndDate, new { @class = "form-control", type = "date" })
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">PO Value</label>
               
                    @Html.TextBoxFor(m => m.POValue, new { @class = "form-control only-numbers", placeholder = "Enter PO Value" })            
                </div>







