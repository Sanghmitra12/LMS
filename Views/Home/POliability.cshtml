                        </tbody>
                    </table>
                </div>

                <!-- EIC Remarks and Button -->
        <div class="mb-3 mt-4" style="width:89%;">
            <label class="form-label">EIC Remarks</label>
            
            @Html.TextBoxFor(m => m.EICRemarks, new { @class = "form-control", placeholder = "Enter EIC Remarks" })
        </div>
                <div class="text-center">
                    @*<button class="btn btn-success px-4">Forward to F&A</button>*@
                    <button type="submit" class="btn btn-success px-4">Forward to F&A</button>
                    

                </div>
            }
            </div>
    </div>

    <!-- DataTable Initialization Script -->
    <script>
        $(document).ready(function () {
            $('#liabilityTable').DataTable({
                paging: true,
                searching: true
            });
        });
    </script>


    <script>
        $(document).ready(function () {

            // When user focuses, clear the field
            $('input').on('focus', function () {
                if ($(this).val() === $(this)[0].defaultValue) {
                    $(this).val('');
                }
            });

            // Allow only numbers
            $('.only-numbers').on('input', function () {
                this.value = this.value.replace(/[^0-9]/g, '');
            });

            // Allow only letters and spaces
            $('.only-letters').on('input', function () {
                this.value = this.value.replace(/[^a-zA-Z\s]/g, '');
            });
        });
    </script>



